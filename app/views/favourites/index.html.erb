<h1>My Garage</h1>
<ul>
  <% @favourites.each do |favourite| %>
    <li>
      <p>
        <%= favourite.car.brand %> |
        <%= link_to "Delete",
                    favourite_path(favourite),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </p>
    </li>
  <% end %>
</ul>
<div class="linkContainer">
  <div class="Backhome">
    <%= link_to 'Home', root_path %>
  </div>
  <div class="links">
    <%= link_to 'View Cars', cars_path %>
  </div>
</div>
